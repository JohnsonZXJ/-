/* pages/myInfo/myInfo.wxss */
@import "../colorui/main.wxss";
@import "../colorui/icon.wxss";
@import "../colorui/animation.wxss";
page {
  display:flex;
  flex-direction: column;
  height: 100%;
}
.UCenter-bg {
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1581956459420&di=562ce868c12cd72733f94e114cf5211f&imgtype=0&src=http%3A%2F%2Fi1.hdslb.com%2Fbfs%2Farchive%2Fe3c0b0545888755063aa332272f1aab44bb85588.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.header {
  border-radius: 50%;
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 35rpx;
  top: -85rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}